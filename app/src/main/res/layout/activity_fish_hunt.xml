<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FishHuntActivity"
    android:background="@color/white"
    >

    <TextView
        android:id="@+id/name_of_target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="200dp"
        android:height="200dp"
        android:text="@string/app_label"
        />

    <TextView
        android:id="@+id/photo_of_target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:width="200dp"
        android:height="200dp"
        android:text="@string/app_label"
        />

    <Button
        android:id="@+id/to_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:width="400sp"
        android:height="200sp"

        android:background="@color/empty_color"
        android:text="@string/empty_text"
        android:onClick="back_to_menu"
        />

    <Button
        android:id="@+id/go_make_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:height="200sp"

        android:background="@color/empty_color"
        android:text="@string/empty_text"
        android:onClick="go_make_photo"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/white"
        android:text="@string/empty_text" />

</RelativeLayout>